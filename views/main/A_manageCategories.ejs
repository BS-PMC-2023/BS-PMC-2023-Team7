<div class="flex flex-1">
  <div class="flex flex-col flex-1 px-2 sm:px-6 lg:px-10 xl:px-20 pb-10">
    <div class="flex-none w-full h-28">
      <div class="w-full h-full flex justify-center items-center">
        <div class="group flex bg-espresso rounded-full drop-shadow-lg">
          <a href="/admin/manageusers">
            <button class="text-latte text-lg font-bold pr-8 pl-10 py-2 bg-espresso transition-all rounded-l-full border border-latte hover:bg-pistachio hover:pr-12 hover:pl-14 hover:text-espresso hover:border-none hover:drop-shadow-xl active:scale-90">Manage Users
            </button>
          </a>
          <a href="/admin/managerecipes">
            <button class="text-latte text-lg font-bold px-8 py-2 bg-espresso transition-all border border-latte hover:bg-pistachio hover:px-12 hover:text-espresso hover:border-none hover:drop-shadow-xl active:scale-90">Manage Recipes
            </button>
          </a>
          <button class="text-espresso text-lg font-bold pr-10 pl-8 py-2 bg-coffee transition-all rounded-r-full hover:bg-pistachio hover:pl-12 hover:pr-14 hover:text-espresso hover:border-none hover:drop-shadow-xl cursor-default">Manage Categories
          </button>
        </div>
      </div>
    </div>
    <form action="/admin/managecategories" method="POST" class="flex-1 w-full">
      <div class="flex h-full w-full">
        <div class="flex w-1/3">
          <div class="bg-espresso flex-1 m-2 border border-latte rounded-md">
            <div class="w-full h-full flex flex-col p-4 gap-4">
              <!-- List of categories -->
              <% 
              var index = 0; 
              for (const category of categories) 
              {
              %>
              <button id="categoryButton" name="<%= 'category'+index %>" class="h-16 pl-6 border w-full text-left text-latte px-2 py-1 border-latte rounded-md transition-all bg-espresso hover:bg-pistachio hover:border-none hover:text-espresso drop-shadow-lg hover:drop-shadow-xl hover:font-bold active:scale-95">
                <p><%= category.categoryName %></p>
              </button>
              <% 
                index=index+1;
              } 
              %>
              <!-- End of list -->
            </div>
          </div>
        </div>
        <div class="flex w-2/3">
          <div class="bg-espresso flex-1 m-2 border border-latte rounded-md">
            <div class="w-full h-full flex flex-col p-4 gap-4">
              <!-- Add Ingredient -->
              <div class="flex items-center justify-between h-20 border w-full text-latte border-latte rounded-md transition-all bg-coffee drop-shadow-lg">
                <input type="text" placeholder="Ingredient..." class="ml-2 pl-5 py-5 col-span-4 w-full font-bold transition-all rounded-md placeholder-latte bg-espresso border border-latte hover:border-pistachio hover:text-pistachio hover:placeholder-pistachio focus:border-pistachio focus:text-pistachio focus:placeholder-pistachio focus:ring-0 outline-none focus:outline-none text-sm">
                <button class="bg-coffee mx-2 px-6 rounded-full font-bold text-latte uppercase py-4 transition-all hover:drop-shadow-xl hover:bg-pistachio hover:text-espresso hover:scale-105 active:scale-90">Add
                </button>
              </div>
              <!-- End of add ingredient -->
              <!-- List of ingredients -->
              <% 
              var index2 = 0; 
              for (const ingredient of categories[categoryIndex].ingredient) 
              { 
              %>
              <div class="flex items-center justify-between h-20 border w-full text-latte px-2 py-2 border-latte rounded-md transition-all bg-espresso drop-shadow-lg">
                <p class="pl-6 text-lg font-bold"><%= ingredient %></p>
                <button name="<%= `remove`+index2 %>" type="submit" class="bg-espresso mx-2 px-6 rounded-full font-bold text-latte uppercase py-4 transition-all hover:drop-shadow-xl hover:bg-pistachio hover:text-espresso hover:scale-105 active:scale-90">Remove
                </button>
              </div>
              <% 
                index2=index2+1;
              } 
              %>
              <!-- End of list -->
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

