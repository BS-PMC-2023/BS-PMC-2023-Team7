<div class="bg-white">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold mb-4">Select a background color</h1>
    <div class="mb-4">
      <select id="color-select" class="block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        <option value="default">Select a color</option>
        <option value="red">Red</option>
        <option value="green">Green</option>
        <option value="blue">Blue</option>
      </select>
    </div>
    <div id="bg-color" class="w-full h-64 bg-blue-500 mb-4"></div>
  </div>
  <script>
    const select = document.querySelector('#color-select');
    const bg = document.querySelector('#bg-color');
    select.addEventListener('change', () => {
      const color = select.value;
      if (color === 'default') {
        bg.classList.remove('bg-red-500', 'bg-green-500', 'bg-blue-500');
        bg.classList.add('bg-blue-500');
      } else {
        bg.classList.remove('bg-red-500', 'bg-green-500', 'bg-blue-500');
        bg.classList.add(`bg-${color}-500`);
      }
    });
  </script>
</div>

